# {{ .chezmoi.fqdnHostname }}
Host github.com
    AddKeysToAgent yes
{{- if eq .chezmoi.os "darwin" }}
    UseKeyChain yes
{{- end }}
    IdentityFile ~/.ssh/github
    StrictHostKeyChecking yes
    CheckHostIP no

{{- if hasSuffix "salesforce.com" .chezmoi.fqdnHostname }}

{{ (bitwarden "item" "ssh_config_moveit").notes }}

{{ (bitwarden "item" "ssh_config_et_github").notes }}
{{- if eq .chezmoi.os "darwin" }}
    UseKeyChain yes
{{- end }}

{{ (bitwarden "item" "ssh_config_git_soma").notes }}
{{- if eq .chezmoi.os "darwin" }}
    UseKeyChain yes
{{- end }}

{{ (bitwarden "item" "ssh_config_bastion").notes }}

{{- else }}

Host git.trumpi.co.za
    Port 2222
    AddKeysToAgent yes
    IdentityFile ~/.ssh/github
    StrictHostKeyChecking yes
    CheckHostIP no
