general {
	colors = true
	interval = 5
}

order += "disk /"
order += "ethernet enp5s0"
order += "memory"
order += "time"

disk "/" {
        format = "%free"
}

ethernet enp5s0 {
	format_up = "E: %ip (%speed)"
	format_down = "E: down"
}

memory {
        format = "%used"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}

time {
        format = "%Y-%m-%d %H:%M"
}
